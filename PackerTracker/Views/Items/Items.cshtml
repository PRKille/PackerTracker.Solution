@using PackerTracker.Models;

<h2>Your Items:</h2>
<ul>
  @foreach (Item item in Model)
  {
  <li>@item.Type</li>
    <ul>
      <li>Costs: $@item.Cost</li>
    </ul>
    @if (item.Purchased == false)
    {
    <form action="/items/@item.Id" method="post">
    <input type="hidden" name="purchased" value="true">
    <button type="submit">Click When Purchased</button>
    </form>
    }
    @if (item.Packed == false)
    {
    <form action="/items/@item.Id" method="post">
    <input type="hidden" name="packed" value="true">
    <button type="submit">Click When Packed</button>
    </form>
    }
  }
</ul>

<a href="/items/new">Add Another Item</a>